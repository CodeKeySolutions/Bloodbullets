{% extends "/app/Resources/Views/base.admin.twig" %}

{% block header %}{% endblock header %}

{% block main %}
<div id="wrapper">
  <div class="wrapper-login">
    <div class="vert-center">
    {% block actionMessage %}
        {% if message.alert is iterable %}
            <div id="alert" class="alert fade in {% if message.alert.success %}alert-success{% else %}alert-danger{% endif %} show">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <img src="/web/public/images/icons/{% if message.alert.success %}tick{% else %}cross{% endif %}.png" class="icon" alt="" title="Success" border="0" />
                {{ message.alert.message|raw }}
            </div>
        {% else %}
            {{ message|raw }}
        {% endif %}
    {% endblock actionMessage %}
      <form class="form-signin" action="{{ routing.getRouteByRouteName('admin-login') }}" method="POST">
        <input type="hidden" name="security-token" value="{{ securityToken }}"/>
        <div class="content-box-header">
            <div class="panel-title">Inloggen</div>
			
			<div class="panel-options">
				<a href="{{ docRoot }}"><i class="fas fa-home"></i></a>
			</div>
        </div>
        <div class="content-box box-with-header">
          <div class="form-group">
              <label for="inputEmail" class="sr-only">Username</label>
              <input type="text" id="inputEmail" name="email" class="form-control" placeholder="Username" required="" autofocus=""  autocomplete="username"/>
          </div>
          <div class="form-group">
              <label for="inputPassword" class="sr-only">Password</label>
              <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required="" autocomplete="current-password"/>
          </div>
          <div class="form-check">
            <input class="form-check-input" name="remember" type="checkbox" value="remember-me" id="remember" />
            <label class="form-check-label" for="remember">Aangemeld blijven</label>
          </div>
          <button class="btn btn-lg btn-primary btn-block" name="submit-login" type="submit">Inloggen</button>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock main %}
