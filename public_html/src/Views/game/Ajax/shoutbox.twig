{% import "app/Resources/Views/macros/user.tag.macro.twig" as userTagManager %}

{% for message in messages %}
    <div class="row shoutRow {{ cycle(['odd', 'even'], loop.index0) }}">
     <span style="line-height:15px;max-width:73%;display:inline-block;">
        {% if message.type == 1 and message.getUserID == 0 %}
           <small>{{ message.getMessage|raw }}</small>
        {% else %}
            {{ userTagManager.write('shoutMember', message.getId, message.getUserID, message.getUsername, message.getDonatorID, message.getUsernameClassName, message.getUserStyle, message.getAvatar, 'True') }}: {{ message.getMessage|raw }}

        {% endif %}
        </span>
            <small style="display:inline-block;max-width: 27%;padding:3px;box-sizing:border-box;text-align:right;" class="right gray">
               {% if message.type == 0 %}
                {% if userData.getStatusID <= 4 %}
                <a href="/game/shoutbox/report/{{message.id}}">Report </a> | <a href="/admin/shoutbox/mute/{{message.userId}}"> Mute </a> | <a href="/admin/shoutbox/delete/{{message.id}}"> Delete </a>
                {% else %}
                    <a href="/game/shoutbox/report/{{message.id}}">report</a>
                {% endif %}
                </form>
            {% endif %}
            {{ message.getDate }}
            </small>
        </div>
{% endfor %}
{% if messages is empty %}
    <div class="row">
        <p class="center">{{ langs.LOOKS_SILENT }}</p>
    </div>
{% endif %}
