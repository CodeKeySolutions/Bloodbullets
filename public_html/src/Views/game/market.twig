{% extends "/app/Resources/Views/gamebase.twig" %}

{% import "app/Resources/Views/macros/alert.macro.twig" as alert %}

{% block stylesheets %}
<style type="text/css">
    section#ccontainer section#content tr.rowMsg div{border:none;}
</style>
{% endblock stylesheets %}

{% block content %}
<div class="top">
    {{ langs.MARKET }}
</div>
<div class="tab-container cf">
    <div class="tab {% if tab == 'credits' %}tab_on{% endif %} t-33">
        <a href="{{ routing.getRouteByRouteName('market') }}">
            <img src="{{ staticRoot }}/foto/web/public/images/icons/star.png" class="icon" alt=""/> Credits
        </a>
    </div>
    <div class="tab {% if tab == 'whores' %}tab_on{% endif %} t-33">
        <a href="{{ routing.getRouteByRouteName('market-whores') }}">
            <img src="{{ staticRoot }}/foto/web/public/images/icons/user_female.png" class="icon" alt=""/> {{ langs.WHORES }}
        </a>
    </div>
    <div class="tab {% if tab == 'honor-points' %}tab_on{% endif %} t-33">
        <a href="{{ routing.getRouteByRouteName('market-honor-points') }}">
            <img src="{{ staticRoot }}/foto/web/public/images/icons/shield.png" class="icon" alt=""/> {{ langs.HONOR_POINTS }}
        </a>
    </div>
</div>
<div class="content-container">
    <div class="row">
        <div class="center">
            <a id="addMarketItem" href="javascript:void(0);" class="ajaxTab" data-tab="market.new.item" data-category="{{ typeName }}"><img src="{{ staticRoot }}/foto/web/public/images/icons/basket.png" alt="Basket" class="icon"/> {{ langs.PLACE_OR_REQUEST_X_ON_MARKET }}</a>
        </div>
    </div>
    <br class="clear"/>
    {% include "/src/Views/game/tabs/market/"~tab~".twig" %}
</div>
{% if tab == 'credits' or tab == 'honor-points' %}
    <br class="clear"/>
    {{ alert.build('Info', 'alert-info', 'help', langs.MARKET_DEATH_INFO) }}
{% endif %}
{% endblock content %}

{% block javascripts %}
<script type="text/javascript" src="{{ staticRoot }}/web/public/js/ajax-form.js"></script>
{% endblock javascripts %}
