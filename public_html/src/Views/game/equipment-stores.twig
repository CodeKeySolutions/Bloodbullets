{% extends "/app/Resources/Views/gamebase.twig" %}

{% block stylesheets %}{# MOGELIJK NIEUW LAYOUTING SYSTEEM NOG AF TE VERBETEREN! #}
<style type="text/css">
    hr {display:block;width:100%;height:1px;border:none;{#background:#333;#}margin:1px 0;padding:0;}
    @media (max-width: 688px) {
        .row.cols.cf > .equipmentCol.c-50 {width:100%;border:none;}
        .row.cols.cf > .equipmentCol.c-50:first-child {border-bottom:1px solid #000;}
    }
</style>
{% endblock stylesheets %}

{% block content %}
<div class="top">
    {{ langs.EQUIPMENT_STORES }}
</div>
<div class="tab-container cf">
    <div class="tab {% if tab == 'weapons' %}tab_on{% endif %} t-33">
        <a href="{{ routing.getRouteByRouteName('equipment-stores') }}">
            <img src="{{ staticRoot }}/foto/web/public/images/icons/gun.png" class="icon" alt=""/> {{ langs.WEAPONS }}
        </a>
    </div>
    <div class="tab {% if tab == 'protection' %}tab_on{% endif %} t-33">
        <a href="{{ routing.getRouteByRouteName('equipment-stores-protection') }}">
            <img src="{{ staticRoot }}/foto/web/public/images/icons/shield.png" class="icon" alt=""/> {{ langs.PROTECTION }}
        </a>
    </div>
    <div class="tab {% if tab == 'airplanes' %}tab_on{% endif %} t-33">
        <a href="{{ routing.getRouteByRouteName('equipment-stores-airplanes') }}">
            <img src="{{ staticRoot }}/foto/web/public/images/icons/traveling.png" class="icon" alt=""/> {{ langs.AIRPLANES }}
        </a>
    </div>
</div>
<div class="content-container">
    <div class="c-row cf">
        <div class="inner-c-container">
            <div id="buyPossessResponse"></div>
            <div class="center">
                {% include "/src/Views/game/.inc.possess.twig" with {article: langs.THESE, isThese: 'True'} %}
            </div>
        </div>
    </div>
    {% include "/src/Views/game/tabs/equipment-stores/"~tab~".twig" %}
</div>
{% endblock content %}

{% block javascripts %}
<script type="text/javascript" src="{{ staticRoot }}/web/public/js/ajax-form.js"></script>
{% endblock javascripts %}
